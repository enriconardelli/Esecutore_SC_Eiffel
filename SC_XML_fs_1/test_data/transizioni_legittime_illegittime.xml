<?xml version="1.0" encoding="UTF-8"?>
<!--	gli eventi che iniziano con L corrispondono a transizioni legittimee
			mentre quelli che iniziano con N corrispondo a quelle illegittime
-->
<scxml xmlns="http://www.w3.org/2005/07/scxml" version="1.0" initial="S">

<parallel id="S">	
	<transition event="Lf" target="A2a">
		<log name="da S a A2a" />
	</transition>
	<transition event="Lh" target="Q">
		<log name="da S a Q" />
	</transition>
	<transition event="Na" target="B">
		<log name="da S a B" />
	</transition>
	<transition event="Nb" target="A1">
		<log name="da S a A1" />
	</transition>
	
	<parallel id="A" initial="A1">	
		<transition event="Le" target="A1b">
			<log name="da A a A1b" />
		</transition>

		<state id="A1" initial="A1a">
			<transition event="Nd" target="B1">
				<log name="da A1 a B1" />
			</transition>

			<state id="A1a">
				<transition event="Lc" target="A1b">
					<log name="da A1a a A1b" />
				</transition>
				<transition event="Nf" target="A2a">
					<log name="da A1a a A2a" />
				</transition>
				<transition event="Ng" target="P">
					<log name="da A1a a P" />
				</transition>
			</state>

			<state id="A1b">
			</state>
		</state>

		<state id="A2" initial="A2b">
			<transition event="Nc" target="S">
				<log name="da A2 a S" />
			</transition>
			<transition event="Ne" target="B">
				<log name="da A2 a B" />
			</transition>

			<parallel id="A2a">
				<state id="P" initial="X">
					<state id="X">
					</state>
					<state id="W">
						<transition event="Nh" target="A1a">
							<log name="da W a A1A" />
						</transition>
					</state>
				</state>
				<state id="Q" initial="Y">
					<state id="Y">
					</state>
					<state id="Z">
						<transition event="Li" target="S">
							<log name="da Z a S" />
						</transition>
					</state>
				</state>
			</parallel>

			<state id="A2b">
				<transition event="Lg" target="S">
					<log name="da A2b a S" />
				</transition>
				<transition event="Ni" target="B2">
					<log name="da A2b a B2" />
				</transition>
			</state>
		</state>
		
	</parallel>

	<state id="B" initial="B2">
		<state id="B1">
			<transition event="La" target="B1">
				<log name="da B1 a B1" />
			</transition>
			<transition event="Lb" target="B2">
				<log name="da B1 a B2" />
			</transition>
		</state>
		<state id="B2">
			<transition event="Ld" target="B">
				<log name="da B2 a B" />
			</transition>
		</state>
	</state>

</parallel>
</scxml>